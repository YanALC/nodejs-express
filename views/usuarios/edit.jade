extends ../layout

block content
    h1 Editar Cadastro
    hr
    br
    if messages.erro
        div(class="alert alert-danger")
            each msg in messages.erro
                b= msg
                br
        br
    form(method="POST", action="/usuarios/edit/#{dados._id}", role="form")
        div(class="form-group")
            label Nome
            input(type="text", class="form-control", name="nome", placeholder="Nome", value="#{dados.nome}", autofocus, required)
        div(class="form-group")
            label e-mail
            input(type="email", class="form-control", name="email", placeholder="E-mail", value="#{dados.email}", disabled)
        button(type="submit", class="btn btn-success") Salvar
    br
    br
    a(href="/usuarios") Voltar
